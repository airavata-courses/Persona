#!/usr/bin/env groovy
pipeline {
    triggers {
        pollSCM('* * * * *') 
    }
    agent { node { label 'worker' } }

    environment {
        IMAGE_TAG = "${env.BUILD_NUMBER}"

    }

    stages {
        stage("Clone Repository") {
            steps {
                //git branch: 'frontend-service-jenkins', credentialsId: 'bfa23bab-8106-47fd-a41f-4c63413bfe04', url: 'https://github.com/airavata-courses/Persona'
                checkout([
        $class: 'GitSCM', 
        branches: [[name: 'refs/heads/frontend-service-jenkins']], 
        doGenerateSubmoduleConfigurations: false, 
        extensions: [[$class: 'CleanCheckout']], 
        submoduleCfg: [], 
        userRemoteConfigs: [[credentialsId: 'bfa23bab-8106-47fd-a41f-4c63413bfe04', url: 'https://github.com/airavata-courses/Persona']]
    ])
            }
        }

        stage("Build Repository") {
            steps {
                sh "echo skip building"
            }
        }

        stage("Tests Repository") {
            steps {
                sh "echo test"
            }

        }

        stage("Build & Publish") {
            steps {
                sh "cd $WORKSPACE/persona-frontend && docker build -t personateam/frontend-service:latest ."
                sh 'docker login -u personateam -p personateam'
                sh "docker push personateam/frontend-service:latest"
            }

        }

        stage("Deleting local Image") {

            steps {
                sh "docker rmi personateam/frontend-service:latest"
            }
        }
        
        stage("Deploy on kubernetes") {
            steps {
                sh "sed -i 's/VERSION/${env.BUILD_NUMBER}/g' $WORKSPACE/persona-frontend/manifest/kubernetes-manifest.yml"
                sh "cd $WORKSPACE/persona-frontend/manifest && kubectl apply -f kubernetes-manifest.yml"
            }
        }
    }

    post {
        always {
            sh "echo post || true"
        }

    }
}
